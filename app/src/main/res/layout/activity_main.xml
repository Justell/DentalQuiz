<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back2new"
    tools:context="com.example.android.dentaliquiz.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            style="@style/pictures"
            android:src="@drawable/toothbrushes" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/welcome"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSizeXL" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding"
            android:text="@string/opening"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSizeL" />

        <TextView
            style="@style/questions"
            android:text="@string/first" />

        <RadioGroup style="@style/radioGroup">

            <RadioButton
                android:id="@+id/enamel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enamel" />

            <RadioButton
                android:id="@+id/bone_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bone" />

            <RadioButton
                android:id="@+id/stones_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stones" />
        </RadioGroup>

        <TextView

            style="@style/questions"
            android:text="@string/second" />

        <RadioGroup style="@style/radioGroup">

            <RadioButton
                android:id="@+id/meal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meal" />

            <RadioButton
                android:id="@+id/twice_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twice" />

            <RadioButton
                android:id="@+id/can_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/can" />


        </RadioGroup>

        <TextView
            style="@style/questions"
            android:text="@string/third" />

        <RadioGroup style="@style/radioGroup">

            <RadioButton
                android:id="@+id/three_fact_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fact" />

            <RadioButton
                android:id="@+id/three_fiction_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fiction" />
        </RadioGroup>

        <TextView

            style="@style/questions"
            android:text="@string/fourth" />

        <RadioGroup style="@style/radioGroup">

            <RadioButton
                android:id="@+id/four_fact_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fact" />

            <RadioButton
                android:id="@+id/four_fiction_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fiction" />
        </RadioGroup>

        <TextView

            style="@style/questions"
            android:text="@string/fifth" />

        <RadioGroup style="@style/radioGroup">

            <RadioButton
                android:id="@+id/five_fact_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fact" />

            <RadioButton
                android:id="@+id/five_fiction_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fiction" />
        </RadioGroup>

        <TextView
            style="@style/questions"
            android:text="@string/sixth" />

        <RadioGroup style="@style/radioGroup">

            <RadioButton
                android:id="@+id/six_fact_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fact" />

            <RadioButton
                android:id="@+id/six_fiction_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fiction" />
        </RadioGroup>

        <TextView
            style="@style/questions"
            android:text="@string/seventh" />

        <CheckBox
            android:id="@+id/three_months_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:text="@string/threemonths" />

        <CheckBox
            android:id="@+id/once_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:text="@string/onceayear" />

        <CheckBox
            android:id="@+id/infectious_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:text="@string/infectious" />

        <CheckBox
            android:id="@+id/bristles_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:text="@string/bristles" />

        <TextView
            style="@style/questions"
            android:text="@string/eighth" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/paste_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding" />

            <ImageView
                android:layout_width="@dimen/pictureWidthM"
                android:layout_height="@dimen/pictureHeightM"
                android:src="@drawable/pasteok" />

            <RadioButton
                android:id="@+id/paste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding" />

            <ImageView
                android:layout_width="@dimen/pictureWidthM"
                android:layout_height="@dimen/pictureHeightM"
                android:layout_marginRight="@dimen/padding"
                android:src="@drawable/pastel" />

        </RadioGroup>

        <TextView
            style="@style/questions"
            android:text="@string/ninth" />

        <EditText
            android:id="@+id/number_of_teeth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding"
            android:layout_marginLeft="@dimen/padding"
            android:hint="@string/numberofteeth"
            android:inputType="number"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submit_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="submitScore"
                android:padding="@dimen/padding"
                android:text="@string/seeScore" />

            <Button
                android:id="@+id/submit_recommendations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="recommendations"
                android:padding="@dimen/padding"
                android:text="@string/recommendations" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>
